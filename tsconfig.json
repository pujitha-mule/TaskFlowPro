{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts"
  ],

  "compilerOptions": {
    /* ---------- Path Aliases ---------- */
    "baseUrl": ".",
    "paths": {
      "@client/*": ["client/src/*"],
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"]
    },

    /* ---------- Build Behavior ---------- */
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",

    /* ---------- Module & Target ---------- */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,

    /* ---------- Import Compatibility ---------- */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ---------- JS / JSX ---------- */
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    /* ---------- Type Safety ---------- */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* ---------- Type Roots ---------- */
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
